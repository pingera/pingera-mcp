modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Pingera MCP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "pingera_mcp_server"

[[workflows.workflow]]
name = "Pingera MCP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -e . && python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "pingera_mcp_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PYTHONPATH=. python main.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 6274
externalPort = 80
